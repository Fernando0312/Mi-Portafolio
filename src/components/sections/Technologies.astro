---
const tecnologias = [
  {
    nombre: "Java",
    logo: "public/logos/java.png",

  },
  {
    nombre: "JavaScript",
    logo: "/logos/jscript.png",

  },
  {
    nombre: "HTML",
    logo: "/logos/html5.png",

  },
  {
    nombre: "CSS",
    logo: "/logos/CSS-ICONO.png",

  },
  {
    nombre: "SQL",
    logo: "public/logos/logosql.png",

  },
  {
    nombre: ".NET",
    logo: "/logos/.net.png",

  },
  {
    nombre: "C#",
    logo: "/logos/Csharp_Logo.png",

  },
  {
    nombre: "React",
    logo: "/logos/react.png",
  }
];
import Container from "../shared/Container.astro";
---

<section
  id="technologies"
  class="relative py-24 flex items-center justify-center "
>
  <!-- FONDOS CON BLUR Y DEGRADADO -->
  <div class="absolute top-10 left-5 w-72 h-72 rounded-full bg-green-400 blur-3xl opacity-60 rotate-[45deg] skew-x-12"></div>
  <div class="absolute bottom-10 right-5 w-72 h-72 rounded-full bg-indigo-500 blur-3xl opacity-60 -rotate-[30deg] skew-y-12"></div>

  <div class="relative z-10 max-w-6xl w-full">
    <h2 class="text-4xl font-bold text-center mb-12 text-slate-900 dark:text-slate-100 uppercase">
      Tecnolog√≠as
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 justify-items-center">
      {tecnologias.map((tec) => (
        <div
          class="relative w-28 h-28 rounded-full flex items-center justify-center bg-black/10 dark:bg-white/10 shadow-xl backdrop-blur-md transition-transform duration-300 hover:scale-110 hover:border-4 hover:border-teal-400"
        >
          <a href={tec.link} target="_blank" rel="noopener noreferrer" class="absolute inset-0 z-10"></a>
          <img src={tec.logo} alt={tec.nombre} class="w-4/5 h-auto object-contain z-0 transition-opacity duration-300 hover:opacity-90" />
        </div>
      ))}
    </div>
  </div>
</section>
