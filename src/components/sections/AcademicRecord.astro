---
const estudios = [
  {
    titulo: "Bachillerato en Informática Empresarial",
    institucion: "Universidad de Costa Rica",
    periodo: "2021 - 2025",
    descripcion: "Estudié los fundamentos de la informática aplicada a las empresas, aprendí sobre sistemas de información, bases de datos, desarrollo web, redes, servidores y análisis de negocios.",
    link: "https://srp.ucr.ac.cr/docencia/coordinacion-informatica-empresarial/",
  },
  {
    titulo: "Programación en Java Nivel 1",
    institucion: "Universidad de Costa Rica",
    periodo: "2025",
    descripcion: "Reforce conocimientos básicos sobre java y la importancia de la POO.",
    link: "https://acaducr.ucr.ac.cr/curso-de-programacion-java/",
  },
  {
    titulo: "Certificación en React.js",
    institucion: "Plataforma Online",
    periodo: "2024",
    descripcion: "Certificación obtenida en React.js, donde adquirí habilidades avanzadas en la creación de interfaces interactivas y gestión de estado en aplicaciones web.",
    link: "#",
  }
];
---

<section
  id="academicRecord"
  class="relative overflow-hidden py-24"
>
  <!-- Glow background decorations -->
  <div class="absolute right-0 top-15 h-full w-full flex justify-end pointer-events-none">
    <div class="w-28 h-28 flex rounded-xl relative blur-2xl">
      <span class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-yellow-300 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-blue-500 rounded-md rotate-45"></span>
    </div>
  </div>

  <div class="absolute left-0 bottom-16 h-full w-full flex items-end pointer-events-none">
    <div class="w-28 h-28 flex rounded-xl relative blur-2xl">
      <span class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-yellow-300 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-blue-500 rounded-md rotate-45"></span>
    </div>
  </div>

  <div class="max-w-5xl mx-auto px-6 relative z-10">
    <h2 class="text-3xl font-bold text-center mb-12 text-black dark:text-white"> Mis Estudios</h2>
    <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 ">
      {estudios.map(estudio => (
        <div class="relative bg-white dark:bg-gray-800 border-l-4 border-green-500 rounded-xl p-6 shadow-lg hover:-translate-y-1 transition-all duration-300 group overflow-hidden shadow-lg hover:shadow-primary transition-shadow duration-300 space-y-6">
          <!-- Sombra azul a la derecha -->
          <div class="absolute top-0 right-0 h-full w-2 bg-blue-400 dark:bg-blue-500 opacity-20 group-hover:opacity-40 transition-all duration-300"></div>

          <h3 class="text-xl font-semibold mb-2 dark:text-white">{estudio.titulo}</h3>
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{estudio.institucion}</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">{estudio.periodo}</p>
          <p class="mt-4 text-gray-700 dark:text-gray-300">{estudio.descripcion}</p>
          <div class="mt-4 text-center">
            <a href={estudio.link} class="inline-block px-4 py-2 bg-green-600 text-white font-semibold rounded-md hover:bg-blue-500 transition duration-300">
              Ver más
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
