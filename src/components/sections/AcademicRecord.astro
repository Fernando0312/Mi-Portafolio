    <!-- Carrusel -->
<!-- Flechas elegantes -->
<!-- Flecha Izquierda -->
<div class="absolute top-1/2 -translate-y-1/2 left-0 -translate-x-full z-20">
  <button id="prev" class="group bg-white/20 dark:bg-white/10 hover:bg-white/30 dark:hover:bg-white/20 p-3 rounded-full shadow-lg backdrop-blur-lg transition">
    <svg class="w-6 h-6 text-black dark:text-white group-hover:scale-110 transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
  </button>
</div>

<!-- Flecha Derecha -->
<div class="absolute top-1/2 -translate-y-1/2 right-0 translate-x-full z-20">
  <button id="next" class="group bg-white/20 dark:bg-white/10 hover:bg-white/30 dark:hover:bg-white/20 p-3 rounded-full shadow-lg backdrop-blur-lg transition">
    <svg class="w-6 h-6 text-black dark:text-white group-hover:scale-110 transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
  </button>
</div>

      <div class="overflow-visible">
        <div id="carousel" class="flex transition-transform duration-500 ease-in-out gap-8">
          {estudios.map(estudio => (
            <div class="w-full md:w-1/2 lg:w-1/3 flex-shrink-0">
              <div class="relative bg-white dark:bg-gray-800 border-l-4 border-blue-500 rounded-xl p-6 shadow-lg hover:-translate-y-1 transition-all duration-300 group overflow-hidden hover:shadow-primary transition-shadow duration-300 space-y-6 h-full">
                <div class="absolute top-0 right-0 h-full w-2 bg-blue-400 dark:bg-blue-500 opacity-20 group-hover:opacity-40 transition-all duration-300"></div>
                <h3 class="text-xl font-semibold mb-2 dark:text-white">{estudio.titulo}</h3>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{estudio.institucion}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">{estudio.periodo}</p>
                <p class="mt-4 text-gray-700 dark:text-gray-300">{estudio.descripcion}</p>
                <div class="mt-4 text-center">
                  <a href={estudio.link} class="inline-block px-4 py-2 bg-green-600 text-white font-semibold rounded-md hover:bg-blue-500 transition duration-300">
                    Ver más
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      let current = 0;
      const carousel = document.getElementById("carousel");
      const prev = document.getElementById("prev");
      const next = document.getElementById("next");

      function getVisible() {
        return window.innerWidth >= 1024 ? 3 : window.innerWidth >= 768 ? 2 : 1;
      }

      function updateCarousel() {
        const visible = getVisible();
        const card = carousel.querySelector("div");
        const cardWidth = card.offsetWidth + 32; // gap-8 = 32px
        carousel.style.transform = `translateX(-${current * cardWidth}px)`;
      }

      function moveNext() {
        const visible = getVisible();
        const max = carousel.children.length - visible;
        current = current >= max ? 0 : current + 1;
        updateCarousel();
      }

      function movePrev() {
        const max = carousel.children.length - getVisible();
        current = current <= 0 ? max : current - 1;
        updateCarousel();
      }

      next.addEventListener("click", moveNext);
      prev.addEventListener("click", movePrev);
      window.addEventListener("resize", updateCarousel);
      updateCarousel();
    });
  </script>
</section>
