---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section id="Contact" class="py-24 relative flex justify-center items-center">
    <!-- Fondo brillante animado centrado -->
    <div
        class="absolute top-0 left-1/2 transform -translate-x-1/2 w-[500px] h-[500px] bg-gradient-to-br from-green-400 to-blue-500 blur-[150px] opacity-30 z-0"
    >
    </div>

    <Container
        className="relative z-10 flex flex-col items-center gap-16 text-center"
    >
        <!-- Formulario de contacto centrado -->
        <div class="flex-1 w-full max-w-lg">
            <Title>Let’s Work Together</Title>
            <Paragraph className="mt-6">
                Do you have a project in mind or just want to say hi? Feel free
                to contact me!
            </Paragraph>

            <div class="mt-6 flex justify-center gap-6">
                <a
                    href="https://github.com/Fernando0312"
                    target="_blank"
                    class="transition-transform hover:-translate-y-1"
                >
                    <img src="/public/logos/github (2).png" alt="GitHub" class="w-8 h-8" />
                </a>
                <a
                    href="https://www.linkedin.com/in/fernando-urroz-orozco-69424731a/"
                    target="_blank"
                    class="transition-transform hover:-translate-y-1"
                >
                    <img
                        src="/public/logos/linkedin.png"
                        alt="LinkedIn"
                        class="w-8 h-8"
                    />
                </a>
            </div>

            <!-- Campo de formulario -->
            <form
                class="mt-10 bg-box-bg p-6 rounded-xl border border-gray-700 shadow-lg hover:shadow-primary transition-shadow duration-300 space-y-6"
            >
                <div>
                    <label for="name" class="block mb-2 text-sm font-medium"
                        >Name</label
                    >
                    <input
                        type="text"
                        id="name"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="Your name"
                    />
                </div>
                <div>
                    <label for="email" class="block mb-2 text-sm font-medium"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="you@example.com"
                    />
                </div>
                <div>
                    <label for="message" class="block mb-2 text-sm font-medium"
                        >Message</label
                    >
                    <textarea
                        id="message"
                        rows="4"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="Write your message..."></textarea>
                </div>
                <button
                    type="submit"
                    class="bg-primary text-white px-6 py-3 rounded hover:scale-105 transition-transform"
                >
                    Send Message
                </button>
            </form>

            <!-- Redes sociales y detalles personales -->
            <div class="mt-10 flex flex-col items-center gap-4 text-2xl">
                <div class="flex gap-6">
                    <!-- Íconos de redes -->
                    <a
                        href="www.linkedin.com/in/fernando-urroz-orozco-69424731a"
                        target="_blank"
                        class="hover:text-primary transition-transform hover:-translate-y-1"
                    >
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a
                        href="https://github.com/Fernando0312"
                        target="_blank"
                        class="hover:text-primary transition-transform hover:-translate-y-1"
                    >
                        <i class="fab fa-github"></i>
                    </a>
                    <a
                        href="mailto:correo@ejemplo.com"
                        class="hover:text-primary transition-transform hover:-translate-y-1"
                    >
                        <i class="fas fa-envelope"></i>
                    </a>
                    <a
                        href="tel:+506 8888-8888"
                        class="hover:text-primary transition-transform hover:-translate-y-1"
                    >
                        <i class="fas fa-phone"></i>
                    </a>
                </div>

                <!-- Correo y teléfono personal -->
                <div class="text-sm text-gray-400 mt-4">
                    <p>
                        Email: <a
                            href="mailto:correo@ejemplo.com"
                            class="hover:text-primary transition"
                            >ferjoseuo@gmail.com</a>
                    </p>
                    <p>
                        Phone: <a
                            href="tel:+1234567890"
                            class="hover:text-primary transition"
                            >8380-6116 / 6156-8516</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Imagen -->
        <div class="flex-1 relative max-w-md">
            <div class="relative w-full h-80 sm:h-96">
                <!-- efectos -->
                <div
                    class="absolute rotate-45 -left-10 top-1/2 w-16 h-16 bg-gradient-to-br from-primary to-green-400 blur-3xl opacity-40"
                >
                </div>
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-primary to-pink-500 rounded-full blur-3xl opacity-50"
                >
                </div>

                <img
                    src="/images/contact-pic.webp"
                    alt="Contact"
                    class="w-auto h-full absolute bottom-0 left-1/2 -translate-x-1/2 object-cover max-h-full rounded-xl shadow-xl"
                />
            </div>
        </div>
    </Container>
</section>
