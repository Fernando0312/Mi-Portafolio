---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section id="Contact" class="py-24 relative flex justify-center items-center">
    <!-- Fondo brillante animado centrado -->
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-[500px] h-[500px] bg-gradient-to-br from-green-400 to-blue-500 blur-[150px] opacity-30 z-0"></div>

    <Container className="relative z-10 flex flex-col items-center gap-16 text-center">
        <!-- Formulario de contacto centrado -->
        <div class="flex-1 w-full max-w-lg">
            <Title>Letâ€™s Work Together</Title>
            <Paragraph className="mt-6">
                Do you have a project in mind or just want to say hi? Feel free to contact me!
            </Paragraph>

            <div class="mt-6 flex justify-center gap-6">
                <a
                    href="https://github.com/Fernando0312"
                    target="_blank"
                    class="transition-transform hover:-translate-y-1"
                >
                    <img src="/logos/lgit.png" alt="GitHub" class="w-12 h-12" />
                </a>
                <a
                    href="https://www.linkedin.com/in/fernando-urroz-orozco-69424731a/"
                    target="_blank"
                    class="transition-transform hover:-translate-y-1"
                >
                    <img
                        src="/logos/logolinkedin.png"
                        alt="LinkedIn"
                        class="w-12 h-12"
                    />
                </a>
            </div>

            <!-- Campo de formulario -->
            <form
                id="contact-form"
                class="mt-10 bg-box-bg p-6 rounded-xl border border-gray-700 shadow-lg hover:shadow-primary transition-shadow duration-300 space-y-6"
                action="https://formspree.io/f/myzedjkd?format=json"
                method="POST"
                onsubmit="handleSubmit(event)"
            >
                <div>
                    <label for="name" class="block mb-2 text-sm font-medium text-black dark:text-white">
                        Name
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="Your name"
                    />
                </div>
                <div>
                    <label for="email" class="block mb-2 text-sm font-medium text-black dark:text-white">
                        Email
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="you@example.com"
                    />
                </div>
                <div>
                    <label for="message" class="block mb-2 text-sm font-medium text-black dark:text-white">
                        Message
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="w-full px-4 py-2 rounded bg-gray-800 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="Write your message..."
                    ></textarea>
                </div>
                <button
                    type="submit"
                    class="bg-primary text-white px-6 py-3 rounded hover:scale-105 transition-transform"
                >
                    Send Message
                </button>
            </form>
        </div>
    </Container>
</section>

