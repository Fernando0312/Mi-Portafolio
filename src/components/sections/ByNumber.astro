---
// MisEstudios.astro

const estudios = [
  {
    titulo: "Ingeniería en Informática Empresarial",
    institucion: "Universidad XYZ",
    periodo: "2018 - 2023",
    descripcion: "Estudié los fundamentos de la informática aplicada a las empresas, aprendí sobre sistemas de información, bases de datos, desarrollo web y análisis de negocios.",
    link: "#",  // Puedes agregar un enlace para más información si es necesario
  },
  {
    titulo: "Diplomado en Desarrollo Web",
    institucion: "Instituto ABC",
    periodo: "2023 - 2024",
    descripcion: "Me especialicé en tecnologías web modernas como HTML5, CSS3, JavaScript, React.js y frameworks como TailwindCSS.",
    link: "#",
  },
  {
    titulo: "Certificación en React.js",
    institucion: "Plataforma Online",
    periodo: "2024",
    descripcion: "Certificación obtenida en React.js, donde adquirí habilidades avanzadas en la creación de interfaces interactivas y gestión de estado en aplicaciones web.",
    link: "#",
  }
];
---

<style>
  /* Fondo animado con gradiente suave de verde y azul */
  .moving-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #1e7e34, #007bff); /* Verde y azul */
    background-size: 200% 200%;
    animation: gradientShift 12s ease infinite;
    z-index: -1;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Estilo general */
  section {
    position: relative;
    padding: 4rem 1rem;
    color: white;
    overflow: hidden;
  }

  h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 1.5rem;
    font-weight: bold;
    color: #ecf0f1;
  }

  .study-card {
    background-color: rgba(0, 0, 0, 0.7); /* Fondo oscuro */
    padding: 1.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, background-color 0.2s ease, box-shadow 0.2s ease;
    border-left: 5px solid #1e7e34;  /* Borde izquierdo verde */
    border-right: 5px solid #007bff; /* Borde derecho azul */
    position: relative;
    z-index: 1;
  }

  .study-card:hover {
    transform: translateY(-5px);
    background-color: rgba(0, 0, 0, 0.85); /* Fondo más oscuro en hover */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Sombra sutil al hacer hover */
  }

  .study-card a {
    color: #1e7e34; /* Verde para los enlaces */
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.2s ease;
  }

  .study-card a:hover {
    color: #007bff; /* Azul para el hover */
    transform: translateY(-2px); /* Efecto sutil de movimiento del enlace */
  }

  /* Botón animado */
  .study-card .btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 10px 20px;
    background-color: #1e7e34; /* Verde para el botón */
    color: white;
    font-weight: bold;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .study-card .btn:hover {
    background-color: #007bff; /* Azul para el hover del botón */
    transform: scale(1.05); /* Animación de crecimiento al pasar el ratón */
  }

</style>

<section class="bg-black relative overflow-hidden">
  <!-- Fondo animado -->
  <div class="moving-background"></div>

  <div class="max-w-5xl mx-auto px-6 relative z-10">
    <h2>Mis Estudios</h2>

    <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {estudios.map(estudio => (
        <div 
          key={estudio.titulo} 
          class="study-card">
          <h3 class="text-xl font-semibold">{estudio.titulo}</h3>
          <p class="text-sm">{estudio.institucion}</p>
          <p class="text-sm">{estudio.periodo}</p>
          <p class="mt-4 text-gray-300">{estudio.descripcion}</p>
          <div class="mt-4 text-center">
            <a href={estudio.link} class="btn">Ver más</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>